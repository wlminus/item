@using Microsoft.AspNet.Identity
@using System.Security.Claims;
@{
    Layout = null;
    var avatar_id = ((ClaimsIdentity)User.Identity).FindFirst("avatar_id");
    var avatar_name = ((ClaimsIdentity)User.Identity).FindFirst("avatar_name");
    var avatar_ext = ((ClaimsIdentity)User.Identity).FindFirst("avatar_ext");

}
<aside class="main-sidebar sidebar-dark-primary elevation-4">
    <!-- Brand Logo -->
    <a href="/Home/Admin" class="brand-link">
        <img src="~/Content/dist/img/AdminLTELogo.png"
             alt="AdminLTE Logo"
             class="brand-image img-circle elevation-3"
             style="opacity: .8">
        <span class="brand-text font-weight-light">TOAM</span>
    </a>

    <!-- Sidebar -->
    <div class="sidebar">
        <div class="user-panel mt-3 pb-3 mb-3 d-flex">
            <div class="image">
                @if (avatar_id.Value == "")
                {
                    <img src="~/Content/dist/img/user2-160x160.jpg" class="img-circle elevation-2" alt="User Image">
                }
                else
                {
                    <img class="img-circle elevation-2" alt="User Image" src="~/Media/Files/?p=@(avatar_id.Value + avatar_ext.Value)&d=@avatar_name.Value" />
                }
                
            </div>
            <div class="info">
                <a href="/Users/Me" class="d-block">@User.Identity.GetUserName()</a>
            </div>
        </div>

        <!-- Sidebar Menu -->
        <nav class="mt-2">
            <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                <li class="nav-item has-treeview">
                    <a href="#" class="nav-link">
                        <i class="nav-icon fas fa-user"></i>
                        <p>
                            Cá nhân
                            <i class="right fas fa-angle-left"></i>
                        </p>
                    </a>
                    <ul class="nav nav-treeview">
                        <li class="nav-item">
                            <a href="~/Users/Me" class="nav-link">
                                <i class="fas fa-user nav-icon"></i>
                                <p>Thông tin cá nhân</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="~/Users/ChangePassword" class="nav-link">
                                <i class="fas fa-passport nav-icon"></i>
                                <p>Đổi mật khẩu</p>
                            </a>
                        </li>
                    </ul>
                </li>

                @if (User.IsInRole("ROLE_USER"))
                {
                    <li class="nav-item">
                        <a href="~/Houses/Me" class="nav-link">
                            <i class="fas fa-road nav-icon"></i>
                            <p>Phòng trọ cá nhân</p>
                        </a>
                    </li>
                }

                @if (User.IsInRole("ROLE_ADMIN") || User.IsInRole("ROLE_MANAGER"))
                {
                    <li class="nav-item has-treeview">
                        <a href="#" class="nav-link">
                            <i class="nav-icon fas fa-home"></i>
                            <p>
                                Quản lý nhà thuê
                                <i class="right fas fa-angle-left"></i>
                            </p>
                        </a>
                        <ul class="nav nav-treeview">
                            <li class="nav-item">
                                <a href="~/Houses/Create" class="nav-link">
                                    <i class="fas fa-plus nav-icon"></i>
                                    <p>Thêm mới</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="~/Houses/Index" class="nav-link">
                                    <i class="fas fa-home nav-icon"></i>
                                    <p>Danh sách nhà cho thuê</p>
                                </a>
                            </li>
                        </ul>
                    </li>

                    <li class="nav-item">
                        <a href="#" class="nav-link">
                            <i class="nav-icon fas fa-flag"></i>
                            <p>
                                Danh sách đăng kí thuê
                                <i class="right fas fa-angle-left"></i>
                            </p>
                        </a>
                        <ul class="nav nav-treeview">
                            <li class="nav-item">
                                <a href="~/Rooms/Uncheck" class="nav-link">
                                    <i class="fas fa-sticky-note"></i>
                                    <p>Đăng kí chưa duyệt</p>
                                </a>
                            </li>
                        </ul>
                        <ul class="nav nav-treeview">
                            <li class="nav-item">
                                <a href="~/Rooms/Index" class="nav-link">
                                    <i class="fas fa-sticky-note"></i>
                                    <p>Tất cả đăng kí</p>
                                </a>
                            </li>
                        </ul>
                    </li>

                    <li class="nav-item">
                        <a href="~/Transactions/Index" class="nav-link">
                            <i class="fas fa-sticky-note nav-icon"></i>
                            <p>Thay đổi tài sản</p>
                        </a>
                    </li>

                    <li class="nav-item has-treeview">
                        <a href="#" class="nav-link">
                            <i class="nav-icon fas fa-flag"></i>
                            <p>
                                Thống kê báo cáo
                                <i class="right fas fa-angle-left"></i>
                            </p>
                        </a>
                        <ul class="nav nav-treeview">
                            <li class="nav-item">
                                <a href="~/Report/Index" class="nav-link">
                                    <i class="fas fa-sticky-note"></i>
                                    <p>Báo cáo thay đổi tài sản</p>
                                </a>
                            </li>
                        </ul>
                    </li>

                    <li class="nav-item has-treeview">
                        <a href="#" class="nav-link">
                            <i class="nav-icon fas fa-users-cog"></i>
                            <p>
                                Quản trị người dùng
                                <i class="right fas fa-angle-left"></i>
                            </p>
                        </a>
                        <ul class="nav nav-treeview">
                            <li class="nav-item">
                                <a href="~/Roles/Index" class="nav-link">
                                    <i class="fas fa-user-tag nav-icon"></i>
                                    <p>Danh sách vai trò</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="~/Users/Index" class="nav-link">
                                    <i class="fas fa-users nav-icon"></i>
                                    <p>Quản lý người dùng</p>
                                </a>
                            </li>
                        </ul>
                    </li>


                    <li class="nav-item has-treeview">
                        <a href="#" class="nav-link">
                            <i class="nav-icon fas fa-cogs"></i>
                            <p>
                                Quản trị hệ thống
                                <i class="right fas fa-angle-left"></i>
                            </p>
                        </a>
                        <ul class="nav nav-treeview">

                            <li class="nav-item">
                                <a href="~/ItemCategories/Index" class="nav-link">
                                    <i class="fas fa-boxes nav-icon"></i>
                                    <p>Danh mục loại đồ dùng</p>
                                </a>
                            </li>

                            <li class="nav-item">
                                <a href="~/ItemStatus/Index" class="nav-link">
                                    <i class="fas fa-battery-half nav-icon"></i>
                                    <p>Trạng thái đồ dùng</p>
                                </a>
                            </li>

                            <li class="nav-item">
                                <a href="~/Provinces/Index" class="nav-link">
                                    <i class="fas fa-map-marked-alt nav-icon"></i>
                                    <p>Danh mục tỉnh/Tp</p>
                                </a>
                            </li>

                            <li class="nav-item">
                                <a href="~/Districts/Index" class="nav-link">
                                    <i class="fas fa-map-marked-alt nav-icon"></i>
                                    <p>Danh mục quận/huyện</p>
                                </a>
                            </li>

                            <li class="nav-item">
                                <a href="~/Wards/Index" class="nav-link">
                                    <i class="fas fa-map-marked-alt nav-icon"></i>
                                    <p>Danh mục phường/xã</p>
                                </a>
                            </li>
                        </ul>
                    </li>
                }






            </ul>
        </nav>
        <!-- /.sidebar-menu -->
    </div>
    <!-- /.sidebar -->
</aside>