@model IEnumerable <WebApplication1.Models.ListUserViewModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Danh sách người dùng</h2>

@{
    ViewBag.Title = "Index";
}


<p>
    @Html.ActionLink("Tạo mới", "Create")
</p>

<table class="table">
    <tr>
        <th>
            Avatar
        </th>
        <th>
            Tên đăng nhập
        </th>
        <th>
            Tên
        </th>
        <th>
            Họ
        </th>
        <th>
            Email
        </th>
        <th>
            Vai trò
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td width="15%">
                <div class="user-avatar">
                    @if (item.Avatar != null)
                    {
                        <img class="user-avatar-img" src="~/Media/Files/?p=@(item.Avatar.Id + item.Avatar.Media_Extension)&d=@item.Avatar.Media_Name" />
                    }
                    else
                    {
                        <img class="user-avatar-img" src="~/Media/Files/?p=default.jpg&d=default" />
                    }
                </div>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @foreach (var role in item.listRoles)
                {
                    <p>@role</p>
                }
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.UserName }) |
                @Html.ActionLink("Roles", "UserRoles", new { id = item.UserName }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.UserName })
            </td>
        </tr>
    }

</table>
